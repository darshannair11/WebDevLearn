<%- include('partials/header') %>
<h1>Compose</h1>
<form method="post" action="/compose">
    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input name="postTitle" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title">
      <small id="emailHelp" class="form-text text-muted">Enter your Post Heading here</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Post</label>
      <textarea class="form-control" name="postBody" id="exampleInputPassword1" cols="30" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include('partials/footer') %>